<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.splash3"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:background="@drawable/fondo"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Mitema" >
        <activity
            android:name="com.example.splash3.Principal"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.splash3.MainActivity"
            android:label="@string/title_activity_principal"
            android:screenOrientation="portrait"
            android:theme="@style/Mitema.boton" >
        </activity>
        <activity
            android:name="com.example.splash3.Play"
            android:label="@string/title_activity_play"
            android:theme="@style/Mitema.credits" >
        </activity>
        <activity
            android:name="com.example.splash3.Scores"
            android:label="@string/title_activity_scores"
            android:screenOrientation="portrait" 
             android:theme="@style/Mitema.credits">
        </activity>
        <activity
            android:name="com.example.splash3.Credits"
            android:label="@string/title_activity_credits"
            android:screenOrientation="portrait"
            android:theme="@style/Mitema.credits" >
        </activity>
        <activity
            android:name="com.example.splash3.Settings"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait"
            android:theme="@style/Mitema.credits" >
        </activity>
        <activity
            android:name="com.example.splash3.CampoPreubas"
            android:label="@string/title_activity_campo_preubas" >
        </activity>
    </application>

</manifest>
