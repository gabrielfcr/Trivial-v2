     android:pivotX = "50%" 
     android:pivotY = "50%"
     android:fromDegrees = "0"
     android:toDegrees = "-30"
     android:duration = "1000"        
     />
   
<translate
    android:startOffset="800"
    android:duration = "3000" 
    android:fromXDelta = "0"
